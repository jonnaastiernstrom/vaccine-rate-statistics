<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DSUGrupp1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DSUGrupp1.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
</head>
<body>
    <header>
          <h1 id="header-title">VaccinDataKollen</h1> <img id="logo" src="/Images/logo.png" alt="Logotyp">
    </header>

    <nav class="navbar">
        <button class="nav-button">@Html.ActionLink("Östersunds Kommun", "Index", "Home")</button>
        <button class="nav-button">@Html.ActionLink("Specifikt område", "Detail", "Home")</button>
        <button class="nav-button">@Html.ActionLink("Karta", "Map", "Home")</button>
    </nav>
   

    <div class="flex-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>


        <div class="flex-item left"> 
            @RenderSection("LeftContent", required: false)
        </div>

        <div class="flex-item right">
            @RenderSection("RightContent", required: false)
        </div>
        
        <div class="flex-item center">
            @RenderSection("CenterContentOne", required: false)
        </div>
        <div class="flex-item center">
            @RenderSection("CenterContentTwo", required: false)
        </div>
        
    </div>

    <footer>
        <div>
            <p>Team 1   |   DSU24</p>
        </div>
    </footer>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
   
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
